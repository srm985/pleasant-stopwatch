<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.pleasantstopwatch" 
    version="1.0.0" 
    xmlns="http://www.w3.org/ns/widgets" 
    xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>PleasantStopwatch</name>
    <description>
        A simple neumorphic stopwatch app providing a pleasant user experience.
    </description>
    <author email="srmcquay@seanmcquay.com" 
        href="https://www.seanmcquay.com/">
        Sean McQuay
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" 
        spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />

        <icon src="res/icon/android/ldpi.png" 
            density="ldpi" />
        <icon src="res/icon/android/mdpi.png" 
            density="mdpi" />
        <icon src="res/icon/android/hdpi.png" 
            density="hdpi" />
        <icon src="res/icon/android/xhdpi.png" 
            density="xhdpi" />
        <icon src="res/icon/android/xxhdpi.png" 
            density="xxhdpi" />
        <icon src="res/icon/android/xxxhdpi.png" 
            density="xxxhdpi" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
